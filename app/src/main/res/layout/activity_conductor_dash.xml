<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/imageuser"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/usericon"/>
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageuser"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conductor"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/username"
                    android:layout_toRightOf="@+id/imageuser"
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/exit"
                    android:onClick="LogOut"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/linearimagecont"
                android:layout_below="@+id/header"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/trackingimage"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:layout_height="150dp"
                    android:src="@drawable/notracking"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/linearimagecont"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="290dp">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/disavledtext"
                    android:layout_height="wrap_content"
                    android:text="Tracking is Disabled !"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:paddingLeft="25dp"
                    android:id="@+id/longtext"
                    android:gravity="center"
                    android:paddingRight="25dp"
                    android:layout_below="@+id/disavledtext"
                    android:layout_marginTop="15dp"
                    android:text="A station master must login to manage tracking. Click manage tracking below to log in"/>

                <Button
                    android:text="MANAGE TRACKING"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="150dp"
                    android:onClick="GoSmLogin"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/enabletracking" />

                <Button
                    android:text="Report Failure"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:onClick="OpenFrag"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/longtext"
                    android:layout_alignLeft="@+id/enabletracking"
                    android:layout_alignStart="@+id/enabletracking"
                    android:id="@+id/failure" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>