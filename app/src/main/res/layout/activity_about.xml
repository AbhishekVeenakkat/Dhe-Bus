                android:id="@+id/gifImageView" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/logodhebus"
            android:id="@+id/imageView5" />

